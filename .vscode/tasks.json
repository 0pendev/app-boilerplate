{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run make",
            "type": "shell",
            "command": "BOLOS_SDK=${input:sdk} make -j",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run [debug] make",
            "type": "shell",
            "command": "BOLOS_SDK=${input:sdk} make -j DEBUG=1",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run make clean",
            "type": "shell",
            "command": "make clean",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run Speculos",
            "type": "shell",
            "command": "speculos --model ${input:model} build/${input:model}/bin/app.elf",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Kill Speculos",
            "type": "shell",
            "command": "pkill -f speculos",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Run functional tests",
            "type": "shell",
            "command": "pytest tests/ --tb=short -v --device ${input:model}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Install tests requirements",
            "type": "shell",
            "command": "pip install -r tests/requirements.txt",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            //  This won't work in Docker for Mac (no support for USB passthrough)
            "label": "Run make load",
            "type": "shell",
            "command": "BOLOS_SDK=${input:sdk} make load",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
    ],
    "inputs": [
        {
            "id" : "sdk",
            "type": "pickString",
            "description": "Which device do you want to build for ?",
            "options": [
                "$NANOS_SDK TARGET=nanos",
                "$NANOX_SDK TARGET=nanox",
                "$NANOSP_SDK TARGET=nanos2",
                "$STAX_SDK TARGET=stax",
            ]
        },
        {
            "id" : "model",
            "type": "pickString",
            "description": "Which model to run speculos for ?",
            "options": [
                "nanos",
                "nanox",
                "nanosp",
                "stax",
            ]
        },
    ]
}
