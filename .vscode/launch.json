{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Native Debug - Remote debug",
            "type": "gdb",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "gdbpath" : "gdb-multiarch",
            "target": "${workspaceFolder}/build/${input:device}/bin/app.elf",
            "autorun": [
                "source -v ${workspaceFolder}/.vscode/debug.gdb",
                "load-app \"${workspaceFolder}/build/${input:device}/bin/app.elf\""
            ],
        }
    ],
    "inputs": [
        {
            "id": "device",
            "description": "Ledger device you want to use",
            "default": "nanox",
            "type": "pickString",
            "options": [
                "nanox",
                "nanos",
                "flex",
                "stax"
            ]
        }
    ],
}
