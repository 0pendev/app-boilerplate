{
	"image": "localhost/next/ledger-app-builder:lite",
	"remoteUser": "root",
	"mounts": [
		{
			"type": "bind",
			"source": "/tmp/.X11-unix",
			"target": "/tmp/.X11-unix"
		}
	],
	"containerEnv": {
		"DISPLAY": ":0"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"iulian-radu-at.vscode-tasks-sidebar",
				"ms-vscode.makefile-tools",
				"llvm-vs-code-extensions.vscode-clangd",
				"webfreak.debug",
				"ms-python.python",
				"ms-python.debugpy",
				"mesonbuild.mesonbuild"
			]
		}
	}
}